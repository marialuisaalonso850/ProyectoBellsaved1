<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="../public/propietario.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Bellsaved</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <%if (nombres) { %>
                            <a class="nav-link" href="#"><strong>
                                    <%= nombres %>
                                </strong></a>
                            <% } %>
                    </li>
                    <li class="nav-item">
                        <%if (nombres) { %>
                            <a class="nav-link" href="/logout">Salir</a>
                            <% } %>
                    </li>
                    <li class="nav-item">
                        <%if (!nombres) { %>
                            <a class="nav-link" href="/interfaz-registro">Registro</a>
                            <% } %>
                    </li>
                    <li class="nav-item">
                        <%if (!nombres) { %>
                            <a class="nav-link" href="/interfaz-login">Login</a>
                            <% } %>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <table class="table text-center">
        <thead>
            <tr>
                
                <th scope="col">nombre_propietario</th>
                <th scope="col">documento_propietario </th>
                <th scope="col">correo_propietario </th>
                <th scope="col">telefono_propietario</th>
                <th scope="col">Ver perfil</th>
            </tr>
        </thead>
        <tbody>
            <% for (let i=0; i < propietario.length; i++) { %>
                <tr>
                    <td>
                        <strong>
                            <%= propietario[i].nombre_propietario %>
                        </strong>
                    </td>
                    <td>
                        <strong>
                            <%= propietario[i].documento_propietario %>
                        </strong>
                    <td>
                        <strong>
                            <%= propietario[i].correo_propietario %>
                        </strong>
                    </td>
                    <td>
                        <strong>
                            <%= propietario[i].telefono_propietario %>
                        </strong>
                    </td>
                    <td>
                        <a href="/detalle-producto/<%= propietario[i].placa %>" class="boton">Ver detalle</a>
                    </td>
                </tr>
                <%} %>
        </tbody>
    </table>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
</body>

</html>